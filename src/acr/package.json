    "react-syntax-highlighter": "^15.5.0",
    "storybook": "^8.0.9",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "tw-colors": "^3.3.1",
    "typescript": "~4.9.4",
    "vite-tsconfig-paths": "^4.3.2",
